    <form action="/register" method="POST">
        <div class="row">
        <div class="col-xs-12">
        	<h2 class="light-text text-center">Sign Up!</h2>
        </div>

            <div class="col-xs-12 form-container">

                <div class="col-xs-12 col-md-6">
