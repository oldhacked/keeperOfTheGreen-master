                        <input type="text" name="fname" placeholder="First Name" class="form-control formNoBrdrSpacing">
                    </div>
                </div>
                

                <div class="col-xs-12 col-md-6">
                    <div class="input">
                        <input type="text" name="lname" placeholder="Last Name" class="form-control formNoBrdrSpacing">
