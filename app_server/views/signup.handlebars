                </div>

                <div class="col-xs-12 col-md-6">
                    <div class="input">
                        <input type="text" name="address" placeholder="Street Address" class="form-control formNoBrdrSpacing">
                    </div>
                </div>
                
                <div class="col-xs-12 col-md-6">
                    <div class="input">
                        <input type="text" name="city" placeholder="City" class="form-control formNoBrdrSpacing">
                    </div>
                </div>
                
                <div class="col-xs-12 col-md-6">
                    <div class="input">
                        <input type="text" name="state" placeholder="State" class="form-control formNoBrdrSpacing">
                    </div>
                </div>
                
                <div class="col-xs-12 col-md-6">
                    <div class="input">
                        <input type="text" name="zip" placeholder="Zip" class="form-control formNoBrdrSpacing">
                    </div>
                </div>
                
                <div class="col-xs-12 col-md-6">
                    <div class="input">
                        <input type="text" name="phone" placeholder="Phone" class="form-control formNoBrdrSpacing">
                    </div>
                </div>
                
                <div class="col-xs-12 col-md-6">
                    <div class="input">
                        <input type="text" name="email" placeholder="Email" class="form-control formNoBrdrSpacing">
                    </div>
                </div>
                
                <div class="col-xs-12 col-md-6">
                    <div class="input">
                        <input type="password" name="password" placeholder="Password" class="form-control formNoBrdrSpacing pull-right">
                    </div>
                </div>

            
                


                
